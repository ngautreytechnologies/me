{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Project Story Schema",
    "type": "object",
    "required": [
        "title",
        "summary",
        "problem",
        "solution",
        "tech_stack",
        "overview",
        "architecture",
        "pros",
        "cons",
        "impact",
        "links",
        "media",
        "timeline",
        "tags",
        "flow"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "description": "Optional reference to JSON Schema draft URL"
        },
        "title": {
            "type": "string",
            "description": "Project name/title"
        },
        "summary": {
            "type": "string",
            "description": "Short executive summary of the project"
        },
        "problem": {
            "type": "string",
            "description": "Problem statement the project addresses"
        },
        "solution": {
            "type": "string",
            "description": "Solution overview / how it solves the problem"
        },
        "tech_stack": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Technologies used in the project"
        },
        "overview": {
            "type": "object",
            "required": [
                "architecture",
                "design_patterns"
            ],
            "properties": {
                "architecture": {
                    "type": "object",
                    "required": [
                        "styles",
                        "key_components"
                    ],
                    "properties": {
                        "styles": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "key_components": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "design_patterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "architecture": {
            "type": "object",
            "required": [
                "style",
                "key_components"
            ],
            "properties": {
                "style": {
                    "type": "string"
                },
                "key_components": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "diagram_url": {
                    "type": "string",
                    "format": "uri"
                }
            }
        },
        "pros": {
            "type": "string",
            "description": "Key strengths, benefits, or advantages"
        },
        "cons": {
            "type": "string",
            "description": "Known trade-offs or limitations"
        },
        "impact": {
            "type": "object",
            "required": [
                "metrics",
                "business_outcome"
            ],
            "properties": {
                "metrics": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "business_outcome": {
                    "type": "string"
                }
            }
        },
        "links": {
            "type": "object",
            "required": [
                "github",
                "demo",
                "docs"
            ],
            "properties": {
                "github": {
                    "type": "string",
                    "format": "uri"
                },
                "demo": {
                    "type": "string",
                    "format": "uri"
                },
                "docs": {
                    "type": "string",
                    "format": "uri"
                }
            }
        },
        "media": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "type",
                    "url",
                    "caption"
                ],
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    },
                    "caption": {
                        "type": "string"
                    }
                }
            }
        },
        "timeline": {
            "type": "object",
            "required": [
                "start",
                "end"
            ],
            "properties": {
                "start": {
                    "type": "string",
                    "pattern": "^[0-9]{4}-[0-9]{2}$"
                },
                "end": {
                    "type": "string",
                    "pattern": "^[0-9]{4}-[0-9]{2}$"
                }
            }
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "summary"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "summary": {
                        "type": "string"
                    }
                }
            }
        },
        "flow": {
            "type": "object",
            "required": [
                "steps"
            ],
            "properties": {
                "steps": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "id",
                            "type",
                            "name",
                            "action"
                        ],
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            },
                            "action": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "additionalProperties": false
}